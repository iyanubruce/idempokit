{
  "name": "@idempotkit/core",
  "version": "1.0.1",
  "description": "Storage-agnostic idempotency primitive with compliance-by-design (PCI-DSS, CBN)",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "idempotency",
    "stripe",
    "payments",
    "fintech",
    "pci-dss",
    "compliance",
    "cbn",
    "redis",
    "postgres",
    "distributed-systems",
    "api"
  ],
  "author": {
    "name": "Iyanuoluwa Taiwo",
    "email": "iyanuoluwa938@gmail.com",
    "url": "https://github.com/iyanubruce"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iyanubruce/idempokit.git",
    "directory": "core"
  },
  "homepage": "https://github.com/iyanubruce/idempotkit/tree/main/core",
  "bugs": {
    "url": "https://github.com/iyanubruce/idempotkit/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.12.0",
    "globals": "^17.3.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.54.0",
    "vitest": "^1.4.0"
  },
  "peerDependencies": {
    "typescript": ">=4.8.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
